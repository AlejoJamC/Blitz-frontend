{{#contentFor 'pageStyles'}}
    <link rel="stylesheet" href="{{level}}vendor/sweetalert/dist/sweetalert.css">
{{/contentFor}}

<div class="session-content">
    <div class="card card-block form-layout">
        <form role="form" action="/signup" id="frmSignUp">
            <div class="text-xs-center m-b-3">
                <img src="{{level}}img/logo.jpg" height="80" alt="" class="m-b-1"/>
                <h5>
                    Únete al proyecto Blitz.
                </h5>
                <p class="text-muted">
                    Se requiere crear un usuario para continuar.
                </p>
            </div>
            <fieldset class="form-group">
                <label for="firstname">
                    Nombres
                </label>
                <input type="text" class="form-control form-control-lg" id="firstname" placeholder="mi(s) nombre(s)"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="lastname">
                    Apellidos
                </label>
                <input type="text" class="form-control form-control-lg" id="lastname" placeholder="mi(s) apellido(s)"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="email">
                    Email*
                </label>
                <input type="email" class="form-control form-control-lg" id="email" placeholder="email@myemail.com"
                       required/>
            </fieldset>
            <fieldset class="form-group">
                <label for="password">
                    Contraseña* (al menos 8 caracteres)
                </label>
                <input type="password" class="form-control form-control-lg" id="password" placeholder="********"
                       required minlength="8"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="cpassword">
                    Confirmar contraseña*
                </label>
                <input type="password" class="form-control form-control-lg" id="cpassword"
                       placeholder="********" required minlength="8"/>
            </fieldset>
            <button class="btn btn-primary btn-block btn-lg" type="submit">
                Crear cuenta
            </button>
        </form>
    </div>
</div>
<footer class="text-xs-center p-y-1">
    <p>
        <a href="/">
            Inicio
        </a>
        &nbsp;&nbsp;·&nbsp;&nbsp;
        <a href="/forgot">
            ¿Olvidaste tu contraseña?
        </a>
        &nbsp;&nbsp;·&nbsp;&nbsp;
        <a href="/login">
            Iniciar sesión
        </a>
    </p>
</footer>

{{#contentFor 'pageScripts'}}
    <script src="{{level}}vendor/sweetalert/dist/sweetalert.min.js"></script>
    <script src="{{level}}vendor/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="{{level}}js/signup.js"></script>
{{/contentFor}}